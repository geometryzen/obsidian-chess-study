{
	"compilerOptions": {
		"target": "es2020",
		"module": "esnext",
		"strict": false,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"jsx": "react",
		"outDir": "./dist",
		"allowSyntheticDefaultImports": true,
		"inlineSourceMap": true,
		"inlineSources": true,
		"allowJs": true,
		"declaration": true,
		"noEmitOnError": true,
		"noImplicitAny": true,
		"noImplicitReturns": false,
		"importHelpers": true,
		"isolatedModules": true,
		"removeComments": true,
		"strictNullChecks": true,
		"lib": ["DOM", "ES5", "ES6", "ES7"]
	},
	"include": ["**/*.ts", "src/**/*.tsx"],
	"exclude": ["node-modules"]
}
